@model List<Student.BLL.DTO.ExamDTO>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="panel panel-default">
    <div class="panel-heading">
        <div>All Exams</div>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ExamId</th>
                <th>Group</th>
                <th>Lesson</th>
                <th>Date</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.Id</td>
                    <td>@item.GroupId</td>
                    <td>@item.LessonId</td>
                    <td>@item.ExamDate.ToString("dd/MM/yyyy hh:m")</td>
                    <td>@item.Duration</td>
                    <td>@item.FullMark</td>
                    @*<td class="text-right">@item.LessonId</td>
                        <td class="text-right">@item.Name</td>*@
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add a New Exam", "addExam", "Exam", null,
            new { @class = "btn btn-default" })
    </div>
</div>