@model List<Student.DAL.Entities.Lesson>
@{
    ViewBag.Title = "AddLessonToGroup";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Add Lesson To Group</h2>
<div class="panel-body">
    <table class="table table-striped table-condensed table-bordered">
        <tr>
            <th class="text-right">ID</th>
            <th>Name</th>
        </tr>
        @foreach (var item in Model)
            {
            <tr>
                <td class="text-right">@item.LessonId</td>
                <td class="text-right">@item.Name</td>
                <td class="text-center">
                    @using (Html.BeginForm("DeleteGroupLesson", "Lesson", FormMethod.Post))
                    {
                        @Html.Hidden("LessonId", item.LessonId)
                        @Html.Hidden("GroupId", (int)ViewBag.GroupId)
                        <input type="submit"
                               class="btn btn-default btn-xs"
                               value="Delete" />
                    }
                </td>
            </tr>
        }
    </table>
    <div class="panel-footer">
        @Html.ActionLink("Add a New Lesson", "AddLessonToGroup", "Lesson", new { GroupId = (int)ViewBag.GroupId },
            new { @class = "btn btn-default" })
    </div>
</div>



