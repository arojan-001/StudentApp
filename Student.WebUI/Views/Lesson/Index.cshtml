@model Student.WebUI.Models.LessonsViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var Groups = (List<Student.DAL.Entities.StudentGroup>)ViewBag.Groups;
}
<div class="panel panel-default">
    <div class="panel-heading">
        <div>All Lessons</div>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>Name</th>
            </tr>
            @foreach (var item in Model.Lessons)
            {
                <tr>

                    <td class="text-right">@item.LessonId</td>
                    <td class="text-right">@item.Name</td>

                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add a New Lesson", "AddLesson", "Lesson", null,
            new { @class = "btn btn-default" })
    </div>
</div>


<div class="panel panel-default">
    <div class="panel-heading">
        <div>All Exams</div>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ExamId</th>
                <th>Group</th>
                <th>Lesson</th>
                <th>Date</th>
            </tr>
            @foreach (var item in Model.Exams)
            {
                <tr>
                    <td class="text-right">@item.Id</td>
                    <td>@item.GroupId</td>
                    <td>@(Model.Lessons.FirstOrDefault(p => p.LessonId == item.LessonId)?.Name)</td>
                    <td>@item.ExamDate.ToString("dd/MM/yyyy")</td>
                    @*<td class="text-right">@item.LessonId</td>
                    <td class="text-right">@item.Name</td>*@

                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add a New Exam", "AddExam", "Lesson", null,
            new { @class = "btn btn-default" })
    </div>
</div>