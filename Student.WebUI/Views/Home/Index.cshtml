@model List<Student.WebUI.Models.StudentViewModel>
@{
    ViewBag.Title = "Home Page";
    var Exams = (List<Student.BLL.DTO.ExamDTO>)ViewBag.Exams;
}

<h2>@User.Identity.Name</h2>
<div class="panel panel-default">
    <div class="panel-heading">
        <div>All Exams</div>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ExamId</th>
                <th>Group</th>
                <th>Lesson</th>
                <th>Date</th>
                <th>Duration</th>
                <th>Full Mark</th>
            </tr>
            @foreach (var item in Exams)
            {
        <tr>
            <td class="text-right">@item.Id</td>
            <td>@item.GroupId</td>
            <td>@item.LessonId</td>
            <td>@item.ExamDate.ToString("dd/MM/yyyy hh:mm")</td>
            <td>@item.Duration</td>
            <td>@item.FullMark</td>
            <td>
                @Html.ActionLink("Take Exam", "TakeExam", "Exam", new { examid = item.Id }, new { @class = "btn btn-default  btn-xs" })
            </td>
            @*<td class="text-right">@item.LessonId</td>
        <td class="text-right">@item.Name</td>*@
        </tr>
            }
        </table>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <div>All Evaluetions</div>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">Date</th>
                <th>Lesson</th>
                <th>Value</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.Date.ToString("dd/MM/yyyy")</td>
                    <td>@item.Lesson</td>
                    <td>@item.Value</td>
                </tr>
            }
        </table>
    </div>
</div>