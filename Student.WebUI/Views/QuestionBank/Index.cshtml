@model List<Student.WebUI.Models.QuestionAnswerViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="panel panel-default">
    <div class="panel-heading">
        <div>All Questions</div>
    </div>
    <div class="panel-body">
        <ol class="table table-striped table-condensed table-bordered">
            @foreach (var item in Model)
            {

            <li>@item.question.Question (@item.question.Mark mark)</li>
                @*<li>@item.question.Mark</li>*@
               
        <ul>

            @foreach (var item1 in item.options)
            {

                <li>@item1.Answer (@item1.Correct_Answer Correct_Answer)</li>


            }
            <li>
            @Html.ActionLink("Add Option", "AddOption", "QuestionBank", new { questionid = item.question.Id }, new { @class = "btn btn-default  btn-xs" })
        </li>
        </ul>
                    }
            </ol>

    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add a New Question", "AddQuestion", "QuestionBank", null,
            new { @class = "btn btn-default" })
    </div>
</div>